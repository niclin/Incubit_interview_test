<!DOCTYPE html>
<html>
  <head>
    <title>IncubitInterviewTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "common/flashes" %>
    <% if user_signed_in? %>
      <%= link_to 'Logout', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
